<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/layout_margin_8"
    android:layout_marginEnd="@dimen/layout_margin_16"
    android:layout_marginLeft="@dimen/layout_margin_16"
    android:layout_marginRight="@dimen/layout_margin_16"
    android:layout_marginStart="@dimen/layout_margin_16"
    android:layout_marginTop="@dimen/layout_margin_8"
    app:cardCornerRadius="4dp"
    app:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_detail_review_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Lance"/>

        <TextView
            android:id="@+id/tv_detail_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:minLines="2"
            android:textSize="14sp"
            tools:text="This is good Movie.This is good Movie.This is good Movie.This is good Movie.This is good Movie."/>
    </LinearLayout>
</android.support.v7.widget.CardView>